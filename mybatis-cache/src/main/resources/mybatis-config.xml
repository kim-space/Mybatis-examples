<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!-- 引入属性文件 -->
    <properties resource="jdbc.properties"/>

    <!-- 设置-->
    <settings>
        <!-- 开启自动驼峰命名映射 A_COLUMN -》 aColumn -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- 开启二级缓存 -->
        <setting name="cacheEnabled" value="true"/>
    </settings>
    
    <!-- 定义别名 -->
    <typeAliases>
        <!-- 没有使用@Alias自定义别名，mybatis会将类名第一个字母变为小写，作为别名 -->
        <package name="com.mybatis.po"/>
        <!--<typeAlias type="com.mybatis.po.Role" alias="role"/>-->
    </typeAliases>

    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler" javaType="com.mybatis.enums.Sex"/>
    </typeHandlers>

    <environments default="development">
        <environment id="development">
            <!-- 事务管理
             JDBC jdbc方式管理事务
             MANAGED 采用容器方式管理事务
             自定义
              -->
            <transactionManager type="JDBC"/>
            <!-- 定义数据库信息 -->
            <dataSource type="POOLED"> <!-- UNPOOLED非连接池 POLLED连接池数据库 JNDI 自定义数据源 -->
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <!-- 定义映射器 -->
    <mappers>
        <mapper resource="mapper/roleMapper.xml"/>
        <mapper resource="mapper/userMapper.xml"/>
    </mappers>
</configuration>